<%= link_to "Create Forecast", new_forecast_path, class: 'btn btn-success' %>

<div class='table-responsive'>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @forecasts.each do |forecast| %>
    <tr>
      <td><%= forecast.location %></td>
      <td><%= forecast.latitude %></td>
      <td><%= forecast.longitude %></td>
      <td><%= link_to "Delete", forecast_path(forecast), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>