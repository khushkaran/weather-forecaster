<div class='table-responsive'>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>
  <tbody>
    <% @forecasts.each do |forcast| %>
    <tr>
      <td><%= forcast.location %></td>
      <td><%= forcast.latitude %></td>
      <td><%= forcast.longitude %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>