<%= link_to "Create Forecast", new_forecast_path, class: 'btn btn-success' %>

<div class='table-responsive'>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Generated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @forecasts.each do |forecast| %>
    <tr>
      <td><%= forecast.location %></td>
      <td><%= forecast.latitude %></td>
      <td><%= forecast.longitude %></td>
      <td><%= forecast.created_at.strftime('%A %d %b %Y @ %H:%M') %></td>
      <td><%= link_to "View", forecast_path(forecast), {class: 'btn btn-primary'} %>
      <%= link_to "Delete", forecast_path(forecast), {method: :delete, class: 'btn btn-danger'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>